
import "core.lists"

native func runtime(function)
native func println(str)

native func strcmp(str1, str2)
native func slice(str1, from, to)

native func isNumber(value)
native func pow(a, b)
native func cos(a)
native func sin(a)
native func tan(a)
native func rand()
native func type(var)

func min(a, b) {
	if a > b {
		return b
	} else {
		return a
	}
}

func max(a, b) {
	if a > b {
		return a
	} else {
		return b
	}
}
const global NaN = 0d / 0d
const global PI = 3.141592653589793
const global ln = "\n"

func degrees(rads) {
	return rads * (180 / PI)
}
func radians(degs) {
	return degs * (PI / 180)
}

func roundVal(value, p) {
	return round value, p
}

func not(bool) {
	return bool == false
}

func isEmpty(str) {
	return $equals(str, "")
}

func isNotEmpty(str) {
	return $not($equals(str, ""))
}

func isString(var) {
	return $equals($type(var), "String")
}

func equals(var1, var2) {
	return $strcmp(var1, var2) == 0
}

func notEqual(var1, var2) {
	return $strcmp(var1, var2) != 0
}