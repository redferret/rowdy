
	// Demo to show how to setup callbacks

	
	func main(bool) {
	
		if (isset bool) {
			someConditionIsTrue = bool
		} else {
			someConditionIsTrue = false
		}
		anonymous = func() {
			print "Hello Anonymous!\n"
		}
		->anonymous()
		
		->service(callbackFunc)
		
		->doSomething( func (response){
			print "Success: ", response, "\n"
		}, func (response){
			print "Failure: ", response, "\n"
		}, someConditionIsTrue)
	}
	
	func callbackFunc(msg) {
		print "Callback: ", msg, "\n"
	}
	
	func service(callback) {
		->callback("Hello World!")
	}
	
	func doSomething(success, failure, someConditionIsTrue) {
		if someConditionIsTrue {
			->success("All is well")
		} else {
			->failure("Something went wrong")
		}
	}
