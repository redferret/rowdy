
import "core.rowdy"

func main() {
	print "Generating Random List of Numbers...", ln
	list = $getRandomList(100000)
	
	print "Getting Odd Numbers...", ln
	odds = $apply(list, func(elem) {
		if (elem % 2 != 0) {
			return elem
		}
	})
	print "Size of odds list = ", $size(odds), ln
}

func getRandomList(count) {
	rands = $List()
	$forLoop(0, count, 1, func(i) {
		$add(rands, ($rand() * 100) as int)
	})
	return rands
}
